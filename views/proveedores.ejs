<!DOCTYPE html>
<html>
<head>
  <title>Proveedores</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>Lista de Proveedores</h1>

  <a href="/proveedores/nuevo">+ Agregar Proveedor</a>

  <% if (proveedores.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Contacto</th>
          <th>Teléfono</th>
          <th>Email</th>
          <th>Productos ofrecidos</th>
        </tr>
      </thead>
      <tbody>
        <% proveedores.forEach(p => { %>
          <tr>
            <td><%= p.nombre %></td>
            <td><%= p.contacto %></td>
            <td><%= p.telefono %></td>
            <td><%= p.email %></td>
            <td><%= p.productosOfrecidos.join(', ') %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p>No hay proveedores cargados.</p>
  <% } %>

  <a href="/">← Volver al inicio</a>
</body>
</html>
